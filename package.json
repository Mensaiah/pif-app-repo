{
  "name": "pif-api",
  "version": "1.0.0",
  "description": "PIF API built with Node.js and Express",
  "main": "src/app.ts",
  "scripts": {
    "start": "node bin/prod/www",
    "dev": "ts-node-dev --respawn --transpile-only --exit-child --clear bin/dev/www",
    "build": "tsc -p tsconfig.prod.json",
    "lint": "eslint 'src/**/*.{js,ts}' --fix",
    "test": "jest src",
    "docker:build": "docker build -t pif-api-img .",
    "docker:run": "docker run -d -p 3000:3000 --name pif-container pif-api-img",
    "docker:dev": "docker-compose up --build"
  },
  "_moduleAliases": {
    "~": "src"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:pif-org/pif-api.git"
  },
  "engines": {
    "node": ">=18.15.0",
    "npm": ">=9.5.0"
  },
  "keywords": [
    "PIF",
    "Gift",
    "Charity",
    "API",
    "Node.js",
    "Express"
  ],
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-fingerprint": "^1.2.2",
    "firebase": "^9.19.1",
    "firebase-admin": "^11.6.0",
    "helmet": "^6.1.5",
    "module-alias": "^2.2.2",
    "redis": "^4.6.5",
    "winston": "^3.8.2",
    "zod": "^3.21.4",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.15.11",
    "@types/validator": "^13.7.15",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.5.0"
  }
}

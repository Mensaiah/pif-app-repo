{
  "name": "pif-api",
  "version": "1.0.0",
  "description": "PIF API built with Node.js and Express",
  "main": "src/app.ts",
  "scripts": {
    "start": "node bin/prod/www",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --exit-child --clear bin/dev/www",
    "build": "tsc -p tsconfig.prod.json",
    "lint": "eslint 'src/**/*.{js,ts}' --fix",
    "test": "jest src",
    "docker:build": "docker build -t pif-api-img .",
    "docker:run": "docker run -d -p 3000:3000 --name pif-container pif-api-img",
    "docker:dev": "docker-compose up --build",
    "start:redis": "docker run -p 6379:6379 -it redis/redis-stack-server:latest",
    "check-unused": "npx depcheck"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bson": "^5.2.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase": "^9.21.0",
    "firebase-admin": "^11.7.0",
    "geoip-lite": "^1.4.7",
    "helmet": "^6.1.5",
    "module-alias": "^2.2.2",
    "mongoose": "^7.1.0",
    "ms": "^2.1.3",
    "redis": "^4.6.6",
    "typescript": "^5.0.4",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/geoip-lite": "^1.4.1",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.16.2",
    "@types/uuid": "^9.0.1",
    "@types/validator": "^13.7.15",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:pif-org/pif-api.git"
  },
  "engines": {
    "node": ">=18.15.0",
    "npm": ">=9.5.0"
  },
  "keywords": [
    "PIF",
    "Gift",
    "Charity",
    "API",
    "Node.js",
    "Express"
  ],
  "license": "ISC"
}
